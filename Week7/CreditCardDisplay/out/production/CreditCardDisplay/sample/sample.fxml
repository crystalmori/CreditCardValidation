<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane style="-fx-background-color: beige" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Label layoutX="20" layoutY="40" style="-fx-font: 18 arial" text="Card Number: " />

      <ImageView fx:id="iv" fitHeight="22" fitWidth="30" layoutX="20" layoutY="70">
         <Image url="@/icons/search.png" />
      </ImageView>

      <TextField fx:id="tf" layoutX="50" layoutY="70" prefWidth="350" promptText="XXXX XXXX XXXX XXXX" />

      <Button layoutX="340" layoutY="70" onAction="#buttonPressed" style="-fx-background-color: beige; -fx-font: 12 arial;-fx-border: 33;       -fx-border-color:black; fx-border-width: 0 3 3 0" text="Validate" />

      <Label layoutX="20" layoutY="140" style="-fx-font: 18 arial" text="Expiration Date" />
      <TextField layoutX="20" layoutY="170" promptText="mm/yyyy" />

      <Label layoutX="190" layoutY="140" style="-fx-font: 18 arial" text="CVV" />
      <TextField layoutX="190" layoutY="170" promptText="XXX" />
   </children>

</Pane>
